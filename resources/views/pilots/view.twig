{% extends 'base/index.html' %}
{% block page %}
<h1>{{user.company.name ?? '<em class="text-muted">No company yet!</em>'}}</h1>
<hr>
<h2>Corporate Pilot Roster</h2>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Credits</th>
      <th>Legal Rating</th>
      <th>Location</th>
      <th>Launch</th>
    </tr>
  </thead>
  <tbody>
    {% for pilot in pilots %}
    <tr>
      <th class="align-middle">{{pilot.name}}<br><small>{{pilot.fingerprint}}</small></th>
      <td class="align-middle">{{pilot.credits}} cr.</td>
      <td class="align-middle">{{pilot.legal}}</td>
      <td class="align-middle">{{pilot.location}}</td>
      <td class="align-middle">
        <form method="post" action="{{url_for('game')}}">
          <input name="pilot" type="hidden" value="{{pilot.id}}" />
          <button class="btn btn-link"><i class="fas fa-external-link-alt"></i> Launch!</button>
        </form>
      </td>
    {% else %}
    <tr>
      <td class="text-center" colspan="5">≪ No Pilots ≫</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% if not pilots or pilots|length < 3 %}
  {% include 'pilots/common/addPilot.twig' %}
{% endif %}
{% if not user.company.id %}
  {% include 'pilots/common/addCompany.twig' %}
{% endif %}
{% endblock %}