{% extends 'base/index.html' %}
{% block page %}
<style>
  .flash {
    display: none;
  }
</style>
<div class="card text-white bg-danger mb-3">
  <div class="card-body">
    <h5 class="card-title"><i class="fas fa-exclamation-circle"></i> A significant error has occurred</h5>
    <hr>
    <p class="card-text">
      {% if flash is defined and flash %}
        {% for message in flash %}
          {{message.text}} 
        {% endfor %}
      {% endif %}
    </p>
  </div>
</div>
{% endblock %}