<div class="card col-md-6">
  <div class="card-header">Add A New Star</div>
  <div class="card-body">
    <form action="{{url_for('star.add')}}" method="POST">
      <div class="mb-3 row">
        <label for="starName" class="col-sm-2 col-form-label">Star Name</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="starName" name="name" required>
        </div>
      </div>
      <div class="row mb-3">
        <label class="col-sm-2 col-form-label">Star Type</label>
        <div class="col-sm-10">
          <select id="inputState" class="form-select" name="type" required>
            <option selected disabled>Choose...</option>
            {% for v, t in types %}
            <option value="{{v}}">{{t.name}}</option>
            {% endfor %}
          </select>
        </div>
      </div>
      <div class="row g-3 mb-3">
        <div class="col">
          <input type="text" class="form-control" placeholder="X Coordinate" name="x" required>
        </div>
        <div class="col">
          <input type="text" class="form-control" placeholder="Y Coordinate" name="y" required>
        </div>
      </div>
      <button type="submit" class="btn btn-success btn-block">Create</button>
    </form>
  </div>
</div>