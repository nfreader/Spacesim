{% extends 'base/site.html' %}
{% import 'syst/common/systMacros.twig' as syst_macro %}
{% block page %}
<h1>{{star.name}}<small class="text-muted">
		{{star.type.article}}
		{{star.type.name}}
		located at<code>[{{star.x}},{{star.y}}]</code>
	</small>
</h1>
<hr>
<table class="table">
	<thead>
		<tr>
			<th>System</th>
			<th>Orbital Distance (AU)</th>
			<th>Orbital Speed</th>
			<th>Position</th>
		</tr>
	</thead>
	<tbody>
		{% for syst in star.systs %}
			<tr>
				<th>
					<a href="#">{{syst.name}}</a>
				</th>
				<td>{{syst.distance}}
					AU</td>
				<td>{{syst.speed}}Ëš/day</td>
				<td>{{syst_macro.systProgress(syst.position)}}</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="4" class="text-center">
					<em>No Systems. Star is not traversable!</em>
				</td>
			</tr>
		</td>
	</tbody>
</tr>{% endfor %}</tbody></table>{% if user.permissions.GALAXY %}{% include 'syst/common/addSyst.twig' %}{% endif %}{% endblock %}
